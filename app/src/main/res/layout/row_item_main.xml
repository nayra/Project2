<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="5dp">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="false"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardBackgroundColor="@color/green_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal">

                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/firstItem"
                    android:layout_margin="@dimen/_5sdp"
                    layout="@layout/item_home" />


                <include
                    android:id="@+id/secondItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    layout="@layout/item_home" />


                <include
                    android:id="@+id/thirdItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    layout="@layout/item_home" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.nayra.maraiina.custom_views.MyTextView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:text="@string/type_name"
            android:textColor="@android:color/white"
            android:src="@color/green_very_dark"
            android:elevation="20dp"
            android:background="@drawable/bg_oval_very_dark_green"
            android:padding="@dimen/_10sdp"/>
</RelativeLayout>