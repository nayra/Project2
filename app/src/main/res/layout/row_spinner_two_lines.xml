<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.nayra.maraiina.custom_views.MyTextView android:id="@+id/tvMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:textColor="@android:color/black"
        tools:text="CountryTest"
        android:background="@android:color/transparent"
        android:text="ddddddd" />

    <com.nayra.maraiina.custom_views.MyTextView android:id="@+id/tvMethodDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:textColor="@android:color/darker_gray"
        tools:text="CountryTest"
        android:background="@android:color/transparent"
        android:textSize="@dimen/_8sdp"
        android:text="@string/hint_address_customer"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp" />

</LinearLayout>