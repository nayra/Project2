<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AboutApplicationFragment"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <include layout="@layout/header_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.nayra.maraiina.custom_views.MyBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_developed_by"
                android:textColor="@color/grey_dark"
                android:layout_margin="@dimen/_5sdp"
                android:textStyle="bold"
                android:layout_gravity="center" />

            <com.nayra.maraiina.custom_views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/matteo_works"
                android:textColor="@color/grey_dark"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center" />

            <com.nayra.maraiina.custom_views.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/phone_number_about_application" />

            <com.nayra.maraiina.custom_views.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:drawableLeft="@drawable/whatsapp"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/phone_number_about_application" />


            <com.nayra.maraiina.custom_views.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@android:color/holo_blue_dark"
                android:text="@string/email_address_about_application" />


            <com.nayra.maraiina.custom_views.MyBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/website"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="@dimen/_100sdp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>