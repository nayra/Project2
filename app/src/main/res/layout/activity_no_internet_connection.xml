<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.NoInternetConnectionActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/no_connection"
        android:layout_margin="@dimen/_20sdp"
        android:layout_gravity="center_horizontal" />


    <com.nayra.maraiina.custom_views.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/no_internet_connection" />


    <com.nayra.maraiina.custom_views.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+971 52 272 3747"
        android:drawableLeft="@drawable/ic_phone_in_talk"
        android:drawablePadding="@dimen/_5sdp"
        android:textColor="#3F51B5"
        android:padding="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layoutDirection="ltr" />


    <com.nayra.maraiina.custom_views.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/further_queries"
        android:gravity="center_horizontal" />


    <com.nayra.maraiina.custom_views.MyButton
        android:id="@+id/bt_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again"
        android:background="@drawable/bg_blue_button"
        android:padding="@dimen/_5sdp"
        android:textColor="@android:color/white" />
</LinearLayout>