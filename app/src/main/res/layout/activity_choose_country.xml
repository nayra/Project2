<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ChooseCountryActivity"
    android:background="@color/green_very_dark">


    <com.nayra.maraiina.custom_views.MyTextView
        android:id="@+id/myTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:gravity="center_horizontal"
        android:text="@string/welcome_in_maraiina"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.nayra.maraiina.custom_views.MyTextView
        android:id="@+id/myTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@+id/myTextView"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_40sdp"/>


    <com.nayra.maraiina.custom_views.MyTextView
        android:id="@+id/myTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_16sdp"
        android:text="@string/choose_country"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/myTextView3" />


    <Spinner
        android:id="@+id/spCountries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/myTextView2"
        android:layout_margin="@dimen/_5sdp"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:prompt="@string/choose_country"
        android:spinnerMode="dropdown">

    </Spinner>


    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/segmented2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/spCountries"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal"
        android:gravity="center"
        app:sc_tint_color="@color/green_light"
        android:layoutDirection="ltr">

        <RadioButton
            android:id="@+id/rb_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyRadioButton"
            android:text="@string/english" />

        <RadioButton
            android:id="@+id/rb_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MyRadioButton"
            android:text="@string/arabic" />
    </info.hoang8f.android.segmented.SegmentedGroup>

    <com.nayra.maraiina.custom_views.MyButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/segmented2"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/bg_green_light"
        android:textColor="@android:color/white"
        android:text="@string/continue_to_app"
        android:onClick="continueToApp"
        android:textAllCaps="false" />
</android.support.constraint.ConstraintLayout>