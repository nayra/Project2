<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ChooseCountryActivity"
    android:background="@color/green_very_dark">


    <com.nayra.maraiina.custom_views.MyTextView
        android:id="@+id/myTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:gravity="center_horizontal"
        android:text="@string/welcome_in_maraiina"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.nayra.maraiina.custom_views.MyTextView
        android:id="@+id/myTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@+id/myTextView"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_40sdp"/>


    <com.nayra.maraiina.custom_views.MyTextView
        android:id="@+id/myTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_16sdp"
        android:text="@string/choose_country"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/myTextView3" />

