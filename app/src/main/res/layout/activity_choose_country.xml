    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spCountries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/myTextView2"
        android:entries="@array/countries"
        android:layout_margin="5dp"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        app:backgroundTint="@color/colorAccent"
        android:prompt="@string/choose_country"
        android:spinnerMode="dialog">

    </android.support.v7.widget.AppCompatSpinner>


    <com.nayra.maraiina.custom_views.MyButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/spCountries"
        android:layout_margin="@dimen/_20sdp"
        android:background="@color/green_light"
        android:textColor="@android:color/white"
        android:text="@string/continue_to_app"
        android:onClick="continueToApp"
        android:textAllCaps="false" />
</android.support.constraint.ConstraintLayout>